{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "strict": true,
    "strictNullChecks": true,
    "lib": ["esnext.array"],
    "noImplicitAny": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["src/types/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*", "test/**/*"]
}
